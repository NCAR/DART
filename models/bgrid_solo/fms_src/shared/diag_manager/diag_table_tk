	$currCascade = $b[$num];
	}
	 
	$currCascade->radiobutton(
		-label => "Entry $y",
		-variable => \$entrySelected,
	);
	$buttonCount++;
    }
    }
    else{
	for($y=1; $y <= $ACOUNT; $y++){
	  
	  if($buttonCount ==26){
	  $num++;
	  $b[$num] = $b[$num-1] ->cascade(-label=> "<more>");
	  $buttonCount = 0;
	  $currCascade = $b[$num];
	  }
	 $currCascade->radiobutton(
		-label => "Entry $y",
		-variable => \$entrySelected,
	);
	$buttonCount++;
    }
    }
    if($tbl == '1'){
    $current_b_cascade = $currCascade;
    my $balloon = $TOP->Balloon(-statusbar => $statusB,
