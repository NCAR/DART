	)->
	pack(qw/-pady 2 -side right/);

    $entrylist = $FR->Menubutton(
	-textvariable => \$entrySelected,
	-tearoff => '0',
	-width =>10,
	-relief =>'raised')->pack("-side" => "right");
    
    my $y=0;
    my $buttonCount = 0;
    my @b;
    my $num=0;
    my $currCascade;
    $b[$num] = $entrylist;
    $currCascade = $b[$num];
    
    unless($ACOUNT){$ACOUNT = 0;}
    unless($BCOUNT){$BCOUNT = 0;}
    if($tbl == 1){
	for($y=1; $y <= $BCOUNT; $y++){
